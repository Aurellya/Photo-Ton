<div class="card mx-auto mt-5" style="max-width:400px">
  <div class="card-header">
    <h2>Sign in</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-group'}) do |f| %>
      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <br/>

      <div class="actions">
        <%= f.submit "Sign in" %>
      </div>
    <% end %>
  </div>
</div>


<br/>

<div class="mx-auto" style="max-width:400px">
  <%= render "devise/shared/links" %>
</div>
